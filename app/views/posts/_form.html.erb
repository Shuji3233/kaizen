<%= simple_form_for @post do |f| %>
	<%= select_tag(:category_id, options_for_select(@categories), :prompt => "部門選択") %>
	<%= f.input :title, label: "題名" %>
	<%= f.input :body, label: "改善内容" %>
	<%= f.input :cost, label: "必要経費" %>
	<%= f.input :benefits, label: "改善効果" %>
    <%= f.button :submit %>
<% end %>