<h1><%= params[:category] %></h1>
	<% if @posts.count == 0 %>
		<h3>改善提案はありません</h3>
	<% else %>
	<div>
		<% @posts.each do  |post|%>
			<div class="col-md-3">
				<a href="/posts/ <%= post.id %>%">
					<%= image_tag post.post_img.url(:post_index), class: "post" %>
				</a>
				<p id="title"><%= link_to post.title, post_path(post) %></p>
			</div>
		<% end %>
		</div>
	<% end %>
